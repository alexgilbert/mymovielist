<table class="table table-bordered table-striped table-hover">
  <% @results.each do |tv| %>
    <tr>
      <td style="width:15%">
        <%= link_to tv_path(tv.details.id) do %>
        <%= image_tag("#{@configuration.base_url}w154#{tv.details.poster_path}") if tv.details.poster_path %>
        <% end %>
      </td>
      <td>
        <%= link_to tv.details.name, tv_path(tv.details.id) %> ( <%= tv.details.first_air_date %> 
        <% if tv.details.last_air_date.present? %>
         - <%= tv.details.last_air_date %><% end %> ) <br /><br />
        <% if tv.details.created_by.any? %>
	  Creators: <% tv.details.created_by.each do |creator| %> 
            <%= link_to creator.name, person_path(creator.id) %>
          <% end %><br />
        <% end %>
	Starring: | <% tv.cast.each do |cast| %> 
          <%= link_to cast.name, person_path(cast.id) %> |
        <% end %><br />
      </td>
    </tr>
  <% end %>
</table>
